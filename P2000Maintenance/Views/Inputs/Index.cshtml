@model IEnumerable<P2000Maintenance.Models.P2000.Input>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Populate", "Populate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Panel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Terminal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoftInput)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Included)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastMaintained)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Technician)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>

            @if (item.Panel == null)
            {
                @Html.DisplayFor(modelItem => item.Terminal.Panel.Name)
            }
            else
            {
                @Html.DisplayFor(modelItem => item.Panel.Name)
            } 
        </td>
        <td>
                        @Html.DisplayFor(modelItem => item.Terminal.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoftInput)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Included)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastMaintained)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Technician)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
